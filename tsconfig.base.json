{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "target": "ES2022",
    "module": "ES2022",
    "lib": [
      "ES2022",
      "dom"
    ],
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "@ng-nx/common-data": ["libs/common-data/src/index.ts"],
      "@ng-nx/shared-view": ["libs/shared-view/src/index.ts"],
      "@ng-nx/uni-users-data": ["libs/uni-users-data/src/index.ts"],
      "@ng-nx/uni-users-view": ["libs/uni-users-view/src/index.ts"]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
